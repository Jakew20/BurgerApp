<div class="container">
    <div class="col-md-6">
        <ul class="burger-list">
            {{#each burgers}} 
                {{#unless devoured}}
                    {{> burgers/burger-button devoured=false}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <ul class="burger-list">
            {{#each burgers}} 
                {{#if devoured}}
                    {{> burgers/burger-button devoured=true}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="container">
    <div class="col-xs-12 col-md-6 col-md-push-3">
        <form action="/api/newburger" method="POST">
            <textarea name="burgerName" class="form-control"></textarea>
            <div class="button-col">
                <button type="submit" class="btn btn-primary btn-lg">Submit New Burger</button>
            </div>
        </form>
    </div>
</div>
<li>
    {{ burger_name }} {{#if devoured}}{{else}}<button data-id="{{ id }}" class="devour-button">Devour It!</button>{{/if}}
</li>

<script src="js/burgers.js"></script>